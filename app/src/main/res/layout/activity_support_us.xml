<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_black"
    tools:context=".SupportUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Support Us"
        app:titleTextAppearance="@style/toolbarTitleAppearance"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="366dp"
                android:layout_height="173dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/greenpic1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="To help us in our journey of establishing a safe and secured enviornment for our future and bring forth the necessity to go green we would offer a special thanks to be a part of Nvironment project. "
                android:textColor="@color/blue"
                android:textSize="@dimen/dim_16"
                android:fontFamily="@font/passion_one"
                android:justificationMode="inter_word"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/dim_24"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/passion_one"
                android:hint="Full Name..."
                android:paddingStart="@dimen/dim_15"
                android:paddingEnd="@dimen/dim_15"
                android:textColor="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="@dimen/dim_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/passion_one"
                android:hint="Email..."
                android:paddingStart="@dimen/dim_15"
                android:paddingEnd="@dimen/dim_15"
                android:textColor="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="@dimen/dim_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/full_name" />

            <EditText
                android:id="@+id/thoughts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittext_background"
                android:fontFamily="@font/passion_one"
                android:gravity="top|left"
                android:hint="Thoughts..."
                android:inputType="textMultiLine"
                android:padding="@dimen/dim_15"
                android:textColor="@color/light_blue"
                android:textColorHint="@color/light_blue"
                android:textSize="@dimen/dim_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintVertical_bias="0.008" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dim_8"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/passion_one"
                android:letterSpacing="0.05"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_40"
                android:textStyle="bold"
                app:layout_constraintDimensionRatio="6"
                app:layout_constraintTop_toBottomOf="@id/thoughts"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>